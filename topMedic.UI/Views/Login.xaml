<Page x:Class="topMedic.UI.Views.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:local="clr-namespace:topMedic.UI.Views"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Login">

        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel  Grid.Row="1" Width="450" HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Connexion" Style="{StaticResource TitleTextBlockStyle}"/>

            <Label Content="* Email" Target="{Binding ElementName=EmailTb}" />
                <TextBox x:Name="EmailTb"
                     Height="35"
                     Padding="8"
                     Margin="0 0 0 15"
                     />

                <Label Content="* Mot de passe" Target="{Binding ElementName=PasswordPb}" />
                <PasswordBox x:Name="PasswordPb"
                         Height="35"
                         Padding="8" 
                         Margin="0 0 0 25"
                         />

            <Button Content="Se connecter" Style="{StaticResource PrimaryButtonStyle}" Click="LoginButton_Click"/>

            <TextBlock Margin="0 5 0 0">
            <Hyperlink NavigateUri="Subscribe.xaml" RequestNavigate="Hyperlink_RequestNavigate">
                Pas de compte ? Inscrivez-vous
            </Hyperlink>
            </TextBlock>
        </StackPanel>
        </Grid>
</Page>
