<Page x:Class="topMedic.UI.Views.Subscribe"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:local="clr-namespace:topMedic.UI.Views"
      mc:Ignorable="d" 
         d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Subscribe">

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel  Grid.Row="1" Width="450" HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Inscription" Style="{StaticResource TitleTextBlockStyle}"/>

            <Label Content="* Email" Target="{Binding ElementName=Email}" />
            <TextBox x:Name="Email" Style="{StaticResource FormTextBoxStyle}" />

            <Label Content="* Prénom" Target="{Binding ElementName=Firstname}" />
            <TextBox x:Name="Firstname" Style="{StaticResource FormTextBoxStyle}" />

            <Label Content="* Nom" Target="{Binding ElementName=Lastname}" />
            <TextBox x:Name="Lastname" Style="{StaticResource FormTextBoxStyle}" />

            <Label Content="* Mot de passe" Target="{Binding ElementName=PasswordBox}" />
            <PasswordBox x:Name="Password"
                  Height="35"
                  Padding="8" 
                  Margin="0 0 0 25"
                  />

            <Label Content="* Vérifier le mot de passe" Target="{Binding ElementName=PasswordBoxVerification}" />
            <PasswordBox x:Name="PasswordVerification"
          Height="35"
          Padding="8" 
          Margin="0 0 0 25"
          />

            <Button Content="S'inscrire" Style="{StaticResource PrimaryButtonStyle}" Click="SubscribeButton_Click"/>
            <TextBlock Margin="0 5 0 0">
             <Hyperlink NavigateUri="Subscribe.xaml" RequestNavigate="Hyperlink_RequestNavigate">
                 Déjà inscrit ? Connectez-vous !
             </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
